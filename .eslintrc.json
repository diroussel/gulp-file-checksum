{
    "extends": "standard",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true
    },
    "plugins": [
        "standard", "node"
    ],
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": ["error", "always"],
        "no-empty": "error",
        "no-new": "error",
        "no-var": "error",
        "no-fallthrough": "off",
        "no-unreachable": "off",
        "no-useless-constructor":"off"
    }
}
